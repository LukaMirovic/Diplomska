  "scam_type_definitions": {
    "ponzi_scheme": {
      "description": "Investment fraud where returns are paid from new investors' capital",
      "typical_indicators": ["guaranteed_returns", "referral_bonuses", "no_real_product", "unsustainable_model"],
      "severity": "critical"
    },
    "rug_pull": {
      "description": "Developers abandon project and drain liquidity",
      "typical_indicators": ["anonymous_team", "locked_selling", "sudden_liquidity_removal", "hype_marketing"],
      "severity": "critical"
    },
    "pump_and_dump": {
      "description": "Artificially inflating price before mass selling",
      "typical_indicators": ["coordinated_buying", "social_media_hype", "insider_selling", "price_manipulation"],
      "severity": "high"
    },
    "algorithmic_failure": {
      "description": "Flawed tokenomics or mechanism leading to collapse",
      "typical_indicators": ["complex_mechanisms", "ignored_warnings", "over_leverage", "death_spiral_risk"],
      "severity": "high"
    },
    "suspected_ponzi": {
      "description": "Shows Ponzi characteristics but not yet confirmed",
      "typical_indicators": ["unrealistic_yields", "founder_concentration", "no_clear_revenue", "aggressive_marketing"],
      "severity": "high"
    },
    "exchange_token_risk": {
      "description": "Token tied to potentially risky centralized exchange",
      "typical_indicators": ["centralized_control", "security_breaches", "regulatory_issues", "opacity"],
      "severity": "medium"
    }
  },
